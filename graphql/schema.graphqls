# Query

type Todo {
  id: Int!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: Int!
  name: String!
  organization: Organization!
}

type Organization {
  id: Int!
  name: String!
}

type Query {
  todos: [Todo!]!
}

# Mutation

input CreateTodoInput {
  text: String!
  userId: Int!
}

type Mutation {
  createTodo(input: CreateTodoInput!): Todo!
}
